@model MVCHogeschoolPXL.Models.Handboek

@{
    ViewData["Title"] = "Delete";
    var fileExist = Convert.ToBoolean(ViewBag.FileExist);
    var imgLink = $"/images/{ Model.Afbeelding }";
}

<div class="card w-50 text-center border-info mx-auto mt-5">
    <div class="card-header border-info">
        <h1 class="text-primary">Details</h1>
    </div>
    <div class="card-body">
        <div>
            <h3 class="text-left text-danger">Weet je zeker dat je dit handboek wil wissen?</h3>
            <h4 class="text-left">Handboek</h4>
            <hr class="border-info" />
            <div class="row px-4">
                <div class="col-7">
                    <dl class="row pt-5">
                        <dt class="col-sm-5 text-left">
                            @Html.DisplayNameFor(model => model.HandboekId)
                        </dt>
                        <dd class="col-sm-7 text-left">
                            @Html.DisplayFor(model => model.HandboekId)
                        </dd>
                        <dt class="col-sm-5 text-left">
                            @Html.DisplayNameFor(model => model.Titel)
                        </dt>
                        <dd class="col-sm-7 text-left">
                            @Html.DisplayFor(model => model.Titel)
                        </dd>
                        <dt class="col-sm-5 text-left">
                            @Html.DisplayNameFor(model => model.Kostprijs)
                        </dt>
                        <dd class="col-sm-7 text-left">
                            @Html.DisplayFor(model => model.Kostprijs)
                        </dd>
                        <dt class="col-sm-5 text-left">
                            @Html.DisplayNameFor(model => model.UitgifteDatum)
                        </dt>
                        <dd class="col-sm-7 text-left">
                            @Html.DisplayFor(model => model.UitgifteDatum)
                        </dd>
                        <dt class="col-sm-5 text-left">
                            @Html.DisplayNameFor(model => model.Afbeelding)
                        </dt>
                        <dd class="col-sm-7 text-left">
                            @Html.DisplayFor(model => model.Afbeelding)
                        </dd>
                    </dl>
                </div>
                @if (fileExist)
                {
                    <div class="col-5">
                        <img class="card-img px-4 pt-4" src="@imgLink" alt="Afbeelding niet beschikbaar" />
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="card-footer border-info">
        <form asp-action="Delete">
            <div class="btn-group w-100" role="group">
                <input type="hidden" asp-for="HandboekId" />
                <input type="submit" value="Wissen" class="btn btn-danger w-50 mx-1" />
                <a asp-action="Index" class="btn btn-warning w-50 mx-1">Annuleren</a>
            </div>
        </form>
    </div>
</div>
