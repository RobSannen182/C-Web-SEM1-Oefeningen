@model IEnumerable<MVCHogeschoolPXL.ViewModels.GebruikerInfo>

@{
    ViewData["Title"] = "Index";
   
}


<div class="row">
    <div class="col-2 pt-5 mt-5">
        <vc:gebruiker-filter></vc:gebruiker-filter>
    </div>
    <div class="col-10">
        <div class="row pt-5 pb-2">
            <div class="col-5 text-primary">
                <h1>Overzicht @ViewBag.Titel</h1>
            </div>
            <div class="col-6 text-left d-flex align-items-center">
                <a asp-action="Create" class="btn btn-success">Creëer nieuwe gebruiker</a>
            </div>
        </div>
        @if (Model.Count() > 0)
        {
            <div class="row">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th width="5%">
                                @Html.DisplayNameFor(model => model.GebruikerId)
                            </th>
                            <th width="15%">
                                @Html.DisplayNameFor(model => model.Naam)
                            </th>
                            <th width="15%">
                                @Html.DisplayNameFor(model => model.Voornaam)
                            </th>
                            <th width="35%">
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th width="30%" class="text-center">
                                Acties
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.GebruikerId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Naam)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Voornaam)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <div class="btn-group w-100" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.GebruikerId" color="info">wijzig</a>
                                    <a asp-action="Details" asp-route-id="@item.GebruikerId" color="primary">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.GebruikerId" color="danger">Wissen</a>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-center col-6 offset-3 pt-5">Er zijn nog geen gebruikers!</p>
        }
    </div>
</div>

