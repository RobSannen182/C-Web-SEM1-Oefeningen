@model MVCHogeschoolPXL.ViewModels.GebruikerInfo

@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="border border-info mt-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
        <div class="row p-4">
            <div class="col-12">
                <div class="row">
                    <h2 class="text-primary col pb-3">Nieuwe gebruiker aanmaken</h2>
                </div>
                <div class="row pb-3">
                    <div class="form-group col-4">
                        <label asp-for="Naam" class="control-label"></label>
                        <input asp-for="Naam" class="form-control" />
                        <span asp-validation-for="Naam" class="text-danger"></span> 
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="Voornaam" class="control-label"></label>
                        <input asp-for="Voornaam" class="form-control" />
                        <span asp-validation-for="Voornaam" class="text-danger"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row pt-4" >
                    <div class="col-12">
                        <div class="form-group d-flex justify-content-center">
                            <div class="radio">
                                <label><input asp-for="Functie" type="radio" value="Lector">Lector</label>
                            </div>
                            <div class="radio">
                                <label class="pl-5"><input asp-for="Functie" type="radio" value="Student" checked>Student</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row pt-5">
                    <div class="col-6 text-right">
                        <input type="submit" value="Maak gebruiker aan" class="btn btn-success w-50" />
                    </div>
                    <div class="col-6 text-left">
                        <a asp-action="Index" class="btn btn-danger w-50">annuleren</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
