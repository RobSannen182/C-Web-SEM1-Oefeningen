@model MVCHogeschoolPXL.ViewModels.InschrijvingInfo

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit">
    <div class="border border-info p-5 mt-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.InschrijvingId" value="@ViewBag.InschrijvingId" />
        <div class="row">
            <div class="col text-primary pb-3">
                <h2>Inschrijving aanpassen</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-3 form-group">
                <label asp-for="StudentFullName" class="control-label"></label>
                <input type="text" asp-for="StudentFullName" class="form-control" disabled />
                <span asp-validation-for="StudentFullName" class="text-danger"></span>
                <input type="text" asp-for="StudentId" value="@ViewBag.StudId" class="form-control" hidden />
            </div>
            <div class="col-3 form-group">
                <label asp-for="VakNaam" class="control-label"></label>
                <input type="text" asp-for="VakNaam" class="form-control" disabled />
                <span asp-validation-for="VakNaam" class="text-danger"></span>
            </div>
            <div class="col-3 form-group">
                <label asp-for="AcademieJaar" class="control-label"></label>
                <input type="text" asp-for="AcademieJaar" class="form-control" disabled />
                <input type="text" asp-for="AcademieJaarId" value="@ViewBag.AcademieJaarId" class="form-control" hidden />
                <span asp-validation-for="AcademieJaarId" class="text-danger"></span>
            </div>
            <div class="col-3 form-group">
                <label asp-for="LectorFullName" class="control-label"></label>
                <select asp-for="VakLectorId" class="form-control" asp-items="ViewBag.LectorId"></select>
                <span asp-validation-for="VakLectorId" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group pt-5">
            <div class="col-6 text-right">
                <input type="submit" value="Opslaan" class="btn btn-success w-50" />
            </div>
            <div class="col-6 text-left">
                <a asp-action="Index" class="btn btn-danger w-50">Annuleren</a>
            </div>
        </div>
    </div>
</form>

