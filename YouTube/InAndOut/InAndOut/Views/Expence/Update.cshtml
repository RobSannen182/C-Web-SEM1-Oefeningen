@model InAndOut.Models.ViewModels.ExpenseVM
@{
    ViewData["Title"] = "Update";
}

<form method="post" asp-action="UpdatePost">
    <input asp-for="Expense.Id" hidden/>
    <div class="border p-3">
        <div class="row">
            <div class="col text-black-50 pb-3">
                <h2>Update Post</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-4 form-group">
                <label asp-for="Expense.Item"></label>
                <input asp-for="Expense.Item" class="form-control" />
                <span asp-validation-for="Expense.Item" class="text-danger"></span>
            </div>
            <div class="col-4 form-group">
                <label asp-for="Expense.Price"></label>
                <input asp-for="Expense.Price" class="form-control" />
                <span asp-validation-for="Expense.Price" class="text-danger"></span>
            </div>
            <div class="col-4 form-group">
                <label asp-for="Expense.ExpenseTypeId" class="control-label"></label>
                <select asp-for="Expense.ExpenseTypeId" asp-items="@Model.TypeDropDown" class="form-control">
                    <option selected>--Select Expense Type</option>
                </select>
                <span asp-validation-for="Expense.ExpenseTypeId" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group pt-5">
            <div class="col-6 text-center">
                <input type="submit" class="btn btn-info w-50" value="Update" />
            </div>
            <div class="col-6 text-center">
                <a asp-action="Index" class="btn btn-success w-50">Back to overview</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

