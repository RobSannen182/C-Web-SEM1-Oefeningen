@model IEnumerable<InAndOut.Models.ExpenseType>
@{
    ViewData["Title"] = "Index";
}

<div class="container pt-5">
    <div class="row">
        <div class="col-6 text-primary">
            <h2>My Expensetypes</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">Create new expensetype</a>
        </div>
    </div>
    <div class="row pt-4">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th width="50%">Expense type</th>
                        <th width="50%" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <div class="btn-group w-100" role="group">
                                    @* Bij het klikken op de link wordt de update actie van de ExpenceController uitgevoerd
                                        asp-route-Id zorgt ervoor dat item.Id wordt meegegeven aan de actie *@
                                    <a asp-controller="ExpenseType" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-3">Update</a>
                                    <a asp-controller="ExpenseType" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-3">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center col-6 offset-3 pt-5">No expensetypes declaired yet!</p>
        }
    </div>
</div>

