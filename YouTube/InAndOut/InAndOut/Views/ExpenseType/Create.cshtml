@model InAndOut.Models.ExpenseType

@{
    ViewData["Title"] = "Create";
}




<form method="post" asp-action="Create">
    <div class="border">
        @* onderstaande lijn is optioneel *@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div> @* Verander ModelOnly naar All > foute ingave > div wordt zichtbaar met de foutmessages *@
        <div class="row p-4">
            <div class="col-12">
                <div class="row">
                    <h2 class="text-black-50 col pb-3">Create new Expensetype</h2>
                </div>
                <div class="row pb-3">
                    <div class="form-group col-6">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span> @* foute ingave > span met foutmessage wordt zichtbaar *@
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6 text-center">
                        <input type="submit" value="Create expensetype" class="btn btn-info w-50" />
                    </div>
                    <div class="col-6 text-center">
                        <a asp-action="Index" class="btn btn-danger w-50">Back to overview</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@* Onderstaande code is enkel voor serverside validation *@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

