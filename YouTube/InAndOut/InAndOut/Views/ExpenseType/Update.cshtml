@model InAndOut.Models.ExpenseType
@{
    ViewData["Title"] = "Update";
}

<form method="post" asp-action="UpdatePost" asp-route-Id="@Model.Id">
    <div class="border p-3">
        <div class="row">
            <div class="col text-black-50 pb-3">
                <h2>Update Expensetype</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-6 form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group pt-5">
            <div class="col-6 text-center">
                <input type="submit" class="btn btn-info w-50" value="Update" />
            </div>
            <div class="col-6 text-center">
                <a asp-action="Index" class="btn btn-success w-50">Back to overview</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

